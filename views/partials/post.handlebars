<a class="single-post" href="/edit-post/{{id}}">
  <container>
    <data postId="{{id}}"></data>
    <row>
      <div class="card">
        <div class="card-header">
          <div class="title"><h2>{{title}}</h2>
            <div class="meta">
              by {{user.username}} on {{format_date createdAt}}
            </div>
          </div>
          <div class="card-body">
            {{content_txt}}<br><br>
            {{commentCount}} {{format_plural "comment" commentCount}}
          </div>
        </div>
      </div>
    </row>
  </container>
</a>